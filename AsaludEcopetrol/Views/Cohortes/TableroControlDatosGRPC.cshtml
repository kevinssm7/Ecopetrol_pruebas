            <div class="panel-body">
                <div class="row">
                    <div class="col-md-3">
                        <label class="text-secondary_asalud">Año:</label>
                        <select id="año" name="año" class="form-control select2">
                            <option value="">-Seleccione--</option>
                            @foreach (var item in ViewBag.años)
                            {
                                <option value="@item">@item</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="text-secondary_asalud">Mes:</label>
                        <select class="form-control select2" id="mes" name="mes">
                            <option value="">- Seleccionar -</option>
                            @foreach (ECOPETROL_COMMON.ENTIDADES.ref_meses_del_año item in ViewBag.meses)
                            {
                                <option value="@item.id_mes">@item.descripcion</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="text-secondary_asalud">Regional prestación:</label>
                        <select class="form-control select2" id="regional" name="regional" onchange="CargarLocalidad($(this).val())">
                            <option value="">- Seleccionar -</option>
                            @foreach (ECOPETROL_COMMON.ENTIDADES.Ref_regional item in ViewBag.regional)
                            {
                                <option value="@item.indice">@item.nombre_regional</option>
                            }
                        </select>
                    </div>
                    <div class="col-sm-3">
                        <label class="text-secondary_asalud">Localidad prestación</label>
                        <select class="form-control select2" id="localidad" name="localidad" onchange="ObtenerCiudades($(this).val())" required>
                            <option value="">- Seleccionar -</option>
                        </select>
                    </div>
                </div>
                <br />

                <div class="row" style="align-content:center;">
                    <div class="col-sm-3">
                        <label class="text-secondary_asalud">Ciudad prestación</label>
                        <select class="form-control select2" id="municipio" name="municipio" required>
                            <option value="">- Seleccionar -</option>
                        </select>
                    </div>

                    <div class="col-sm-3">
