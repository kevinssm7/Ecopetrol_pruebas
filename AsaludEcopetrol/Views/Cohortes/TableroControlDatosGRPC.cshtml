<script>
    $(document).ready(function () {

        MostrarTablaGes();
        MostrarTablaRCV();
        MostrarTablaSalud();
        MostrarTablaEPOC();

        $('.select2').select2({
            width: '100%'
        });

        $("ul.nav.nav-pills li a").on('shown.bs.tab', function (e) {

            setTimeout(function () {

                var tab0 = $("#tab" + 0).hasClass("active");
                var tab1 = $("#tab" + 1).hasClass("active");
                var tab2 = $("#tab" + 2).hasClass("active");
                var tab3 = $("#tab" + 3).hasClass("active");

                if (tab0) {
                    MostrarTablaGes();
                }

                if (tab1) {
                    MostrarTablaRCV();
                }

                if (tab2) {
                    MostrarTablaSalud();
                }

                if (tab3) {
                    MostrarTablaEPOC();
                }

            }, 100);
        });
    });

