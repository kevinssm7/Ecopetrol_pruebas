    function CargarLocalidad(a) {

        if (a != "") {
            $("#localidad").empty();
            $("#municipio").empty();
            $.ajax({
                url: "@Url.Action("ObtenerUnis")",
                type: "post",
                data: { regional: a },
                success: function (data) {
                    $("#localidad").empty();
                    $("#localidad").html(data);
                    $("#localidad").val("").trigger("change");
                }
            })
        }
    }

