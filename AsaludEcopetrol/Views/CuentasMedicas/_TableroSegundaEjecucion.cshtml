                                    <td class="text-center">@item.nit</td>
                                    <td class="text-center">@item.muninombre</td>
                                    <td class="text-center">@item.departamento</td>
                                    <td class="text-center">@item.fecha_ejecucion_visita</td>
                                    <td class="text-center">@item.cantidad_facturas</td>
                                    <td class="text-center">
                                        <a class="button_Asalud_Guardar" font-weight:bold" onclick="llamarVistaParcialM4(@item.id_ref_ffmm_prestadores);" data-toggle="modal" data-target="#modal4">
                                            GESTIONAR
                                        </a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
