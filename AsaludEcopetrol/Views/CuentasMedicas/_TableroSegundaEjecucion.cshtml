                <div class="table-responsive">
                    <BR />
                    <table id="tbEjecutadas2C" class="table table-bordered table-condensed" style="font-size:11px; width:100%;  margin:0px !important">
                        <thead>
                            <tr>
                                <th class="hidden">id</th>
                                <th class="text-center">Nombre prestador</th>
                                <th class="text-center">NIT</th>
                                <th class="text-center">Municipio</th>
                                <th class="text-center">Departamento </th>
                                <th class="text-center">Fecha ejecución visita </th>

                                <th class="text-center">Cantidad facturas</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody id="tbodytbl2">
