@model List<ECOPETROL_COMMON.ENTIDADES.cierre_contable>
@{
    ViewBag.Title = "CIERRE CONTABLE";
    Layout = "~/Views/Shared/_LayoutECOPETROL.cshtml";
}

<br />



<div id="pnlPrincipal" class="General">
    
        <table class="table table-hover table-striped table-condensed table-bordered datatable">
            <thead>
                <tr>
                    <th>Regional</th>
                    <th>Usuario</th>
                    <th>Fecha de cargue</th>
                    <th>Periodo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (ECOPETROL_COMMON.ENTIDADES.cierre_contable item in Model)
                {
                    <tr>
                        <td>@item.Ref_regional.nombre_regional</td>
                        <td>@item.usuario</td>
                        <td>@item.fecha_cargue.ToString("MM/dd/yyyy")</td>
                        <td>@item.mes/@item.año</td>
                        <th class="text-center"><a href="@Url.Action("ReporteCierreContable", "CierreContable", new {Idcierre = item.id_cierre})" role="button" style="color:white" class="btn btn-success btn-reporte" onclick=" LoadingShow()">Reporte Cierre Contable</a></th>
                    </tr>
                }
            </tbody>
        </table>
    
</div>




