                        <div class="col-sm-4">
                            <h5><span class="text-secondary_asalud">@Html.LabelFor(p => p.propuesta_acciones)</span></h5>
                            @Html.TextAreaFor(p => p.propuesta_acciones, new { @class = "form-control" })
