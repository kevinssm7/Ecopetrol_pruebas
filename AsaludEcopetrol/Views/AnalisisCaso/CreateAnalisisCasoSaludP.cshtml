                            @Html.ValidationMessageFor(u => u.objetivo_auditoria, null, new { @class = "label label-danger" })
                        </div>
                        <div class="col-sm-4">
                            <h5><span class="text-secondary_asalud">@Html.LabelFor(p => p.descripcion_evento)</span></h5>
