@model AsaludEcopetrol.Models.Consulta.Consulta
@{
    ViewBag.Title = "DEVOLUCIONES SIN GESTIONAR";
    Layout = "~/Views/Shared/_LayoutECOPETROL.cshtml";
}

<br />

<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-sm-6 col-md-6 col-xs-12 form-group">
                <ul class="list-group">
                    <li class="list-group-item">Devoluciones sin gestionar: <strong>@Model.ListDevSinGestionar.Count</strong></li>
                </ul>
            </div>
            <div class="col-sm-6 col-md-6 col-xs-12 form-group text-right">
                <a class="btn button_Asalud_Aceptar btn-sm" href='@Url.Action("ExportarLstDevoluciones","Devoluciones")'><i class="glyphicon glyphicon-download"></i>&nbsp; Exportar A Excel</a>
            </div>
        </div>
        <div class="table-responsive">

            <table id="tabla" class="table table-bordered">
                <tbody>
                    <tr>
                        <th class="text-center th" style='display:none;'>ID DEVOLUCION</th>
                        <th class="text-center th">NUMERO FACTURA</th>
                        <th class="text-center th">NIT</th>
                        <th class="text-center th">PRESTADOR</th>
                        <th class="text-center th">FECHA  DEVOLUCION</th>
                        <th class="text-center th">CIUDAD</th>
                        <th class="text-center th">AUDITOR</th>
                        <th class="text-center th">GESTIONAR</th>
                    </tr>

                    @foreach (var order in Model.ListDevSinGestionar)
                    {

                        <tr>

                            <td style='display:none;'>@order.id_devolucion_factura</td>
                            <td>@order.NumeroFactura</td>
                            <td>@order.Nit</td>
                            <td>@order.Prestador</td>
                            <td>@order.fecha_devolucion</td>
                            <td>@order.ciudad</td>
                            <td>@order.Auditor</td>

                            <td>
                                <a class="btn button_Asalud_Aceptar" href="@Url.Action("GestionarDevolucion", "Devoluciones", new { ID= order.id_devolucion_factura})">
                                    GESTIONAR
                                </a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="~/Scripts/validate.js"></script>
@*<script src="httpS://code.jquery.com/ui/1.11.3/jquery-ui.js"></script>*@

<script>
    $(document).ready(function () {

        $('#tabla').DataTable({
            "searching": true,
            "idisplaylength": 15,
            "lengthchange": false,
            "info": false,
            responsive: true,
            language: {
                processing: "procesando...",
                search: "Buscar:",
                lengthmenu: "mostrar menu registros",
                info: "mostrando registros del start al end de un total de total registros",
                infoempty: "mostrando registros del 0 al 0 de un total de 0 registros",
                infofiltered: "(filtrado de un total de max registros)",
                infopostfix: "",
                loadingrecords: "cargando...",
                zerorecords: "no se encontraron resultados",
                emptytable: "ningún dato disponible en esta tabla",
                paginate: {
                    first: "primero",
                    previous: "anterior",
                    next: "siguiente",
                    last: "último",
                },
            }
        });

    });
</script>


