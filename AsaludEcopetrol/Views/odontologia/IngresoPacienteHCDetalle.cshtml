            uiLibrary: 'bootstrap4',
            dataSource: '/odontologia/GetHCDetalle2/' + value2,
            inlineEditing: { mode: 'command', managementColumnConfig: { width: 240 } },
            columns: [
                { field: 'descripcion', width: 500, title: 'PARAMETRO CALIDAD CONTENIDO' },
