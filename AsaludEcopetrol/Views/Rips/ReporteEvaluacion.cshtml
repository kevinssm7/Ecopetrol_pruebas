    }

    .letra {
        font-size: 15px
    }

    .table {
        font-size: 14px;
    }

    .Cnumerico {
        text-align: right;
    }

    .alert-new {
        color: #012f51;
        background-color: #dcdcdc;
        border-color: #8c8c8c;
        margin-right: 1%;
    }

    .contentErr {
        width: 50%;
