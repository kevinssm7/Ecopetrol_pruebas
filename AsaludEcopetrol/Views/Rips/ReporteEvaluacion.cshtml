        font-size: x-small;
        font-family: Calibri;
    }

    .TamañoImag {
        height: 200px;
        position: center;
    }

    .TamañoDiv {
        position: page;
        /*width:1100px;*/
    }

    .btn-glyphicon {
        padding: 8px;
        background: #ffffff;
        margin-right: 4px;
    }

    .icon-btn {
        padding: 1px 15px 3px 2px;
        border-radius: 50px;
    }
</style>
<script>
    $(document).ready(function ()

    {

        $('.datatable1').DataTable({
            "searching": true,
            "iDisplayLength": 25,
            "lengthChange": false,
            "info": false,
            responsive: true,
        });

        $("#btnlog").click(function ()
        {
            LoadingShow();
            $.ajax({
                url: "@Url.Action("ArmartablaLogEvaluacion","Rips")",
                type: "post",
                data: { IdRips:'@idRips' },
                success: function (data) {
                    $("#popup_body").html(data);
                    LoadingHide();
                    AbrirModal();
                }
            })
        })

        $('#close').on('click', function () {
            $('#popup').fadeOut('slow');
            $('.popup-overlay').fadeOut('slow');
            return false;
        });
    });

    function AbrirModal()
    {
        $('#popup').fadeIn('slow');
        $('.popup-overlay').fadeIn('slow');
        $('.popup-overlay').height($(window).height());
        return false;
    }

    function cortinilla() {
        $(".cortinilla").show();
    }


</script>