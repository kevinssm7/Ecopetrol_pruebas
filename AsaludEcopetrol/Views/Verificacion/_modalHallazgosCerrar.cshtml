@using Kendo.Mvc.UI;

@{
    ViewBag.Title = "_modalHallazgosCerrar";
}


<form id="formHallazgos" action="cerrarItemEvaluacion" method="post" enctype="multipart/form-data">
    <div class="panel panel-default">
        <div class="panel-heading">
            <p class="text-primary_asalud">Hallazgo</p>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-sm-6 form-group">
                    <label class="text-secondary_asalud">Fecha respuesta:</label>
                    <input class="datepickerr2" style="width: 100%" name="fechaRespuesta" id="fechaRespuesta" required />
                    <input type="hidden" id="idTotal" name="idTotal" value="@ViewBag.idTotal" />
                    <input type="hidden" id="idtipoCriterio" name="idtipoCriterio" value="@ViewBag.tipoCriterio" />
                </div>
                <div class="col-sm-6 form-group">
                    <label class="text-secondary_asalud">Tipo hallazgo</label>
                    <select class="form-control select3" style="width:100%" name="tipoHallazgo" id="tipoHallazgo" required>
                        <option value="">- Seleccione -</option>
                        @foreach (ECOPETROL_COMMON.ENTIDADES.ref_evaluacion_tipoHallazgo item in ViewBag.tipoHallazgo)
                        {
                            <option value="@item.id_tipo">@item.tipo_hallazgo</option>
                        }
                    </select>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6 form-group">
                    <label class="text-secondary_asalud">Estado</label>
                    <select class="form-control select3" style="width:100%" name="estado" id="estado" required>
                        <option value="">- Seleccione -</option>
                        @foreach (ECOPETROL_COMMON.ENTIDADES.ref_evaluacion_estadoTotal item in ViewBag.estado)
                        {
                            <option value="@item.id_estado_evaluacion">@item.descripcion_estado</option>
                        }
                    </select>
                </div>

                <div class="col-sm-6 form-group">

                    <label class="text-secondary_asalud">Actividades de mejora</label>
                    <br />
                    <input type="radio" value="si" name="actividades" id="actividades" required />Si
                    <input type="radio" value="no" name="actividades" id="actividades" />No

                    @*<label class="text-secondary_asalud">Cumplimiento</label>*@
                    @*<select class="form-control select3" style="width:100%" name="cumplimiento" id="cumplimiento" required>
                            <option value="">- Seleccione -</option>
                            @foreach (ECOPETROL_COMMON.ENTIDADES.ref_evaluacion_cumplimiento item in ViewBag.cumplimiento)
                            {
                                <option value="@item.id_cumplimiento">@item.descripcion</option>
                            }
                        </select>*@
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6">
                    <label class="text-secondary_asalud">Archivo:</label>
                    <input type="file" class="form-control" name="file" id="file">
                </div>

                <div class="col-sm-6 form-group">
                    <label class="text-secondary_asalud">Tipo soporte:</label>
                    <select class="form-control select3" style="width:100%" name="tipoSoporte" id="tipoSoporte" required>
                        <option value="">- Seleccione -</option>
                        @foreach (ECOPETROL_COMMON.ENTIDADES.ref_evaluacion_tipoSoporte item in ViewBag.tipoSoporte)
                        {
                            <option value="@item.id_soporte">@item.descripcion</option>
                        }
                    </select>
                </div>
            </div>

            <div class="col-md-12">
                <label class="text-secondary_asalud">Observación:</label><span style="color:red"></span>
                <textarea class="form-control" requerid id="observacion" required name="observacion" rows="5" cols="10" maxlength="4999"></textarea>
            </div>
        </div>
        <br />
        <br />
        <div class="row">
            <div class="col-sm-12 form-group text-right">
                <button type="button" id="btnGuardar" onclick="validarformularioCerrar()" class="button_Asalud_Guardar">Guardar</button>
            </div>
        </div>
    </div>
</form>

<script>

    $(".datepickerr2").kendoDatePicker({
        format: "MM/dd/yyyy",
    });
    $(".k-input").attr('readonly', true);

    $('.select3').select2({
        width: '100%'
    });

</script>
