
@{
    ViewBag.Title = "ObtenerAuditorRegional";
}



<div class="tab-content">


    <div class="tab-pane active" id="1b">
        <div class="panel panel-default">
            <div class="panel-heading">
                <strong class="text-primary_asalud">Ingreso gestión</strong>
            </div>

            <div class="panel-body" id="panel_formulario">
                <form class="animated fadeInDown" id="formulario">

                    <div class="row">
                        <div class="col-sm-8">
                            <label class="text-secondary_asalud">Seleccionar Auditor:</label>
                            <select class="form-control select2" required id="id_analista_asig" name="id_analista_asig">
                                <option value="">- Seleccionar -</option>
                                @foreach (ECOPETROL_COMMON.ENTIDADES.vw_auditores_totales item in ViewBag.lista)
                                {
                                    <option value="@item.id_usuario">@item.nombre</option>
                                }

                            </select>
                        </div>
                    </div>
                    <br />
                    <div class="row">

                        <div class="col-sm-12" align="center">
                            <button class="button_Asalud_Guardar" type="button" onclick="finalizar()">Guardar</button>
                        </div>

                    </div>
                    <div style="display:none">
                        <input class="form-control" type="text" name="id_cargue_dtll" id="id_cargue_dtll" value="@ViewBag.id_cargue_dtll" />

                    </div>
                </form>
            </div>
        </div>
    </div>

</div>

<script src="~/Scripts/validate.js"></script>

<script>

    debugger
    $(document).ready(function () {
        $('.select2').select2({
            width: '100%'
        });
       var Lista = JSON.parse('@Html.Raw(Json.Encode(ViewBag.cargue_base))');
    })

    function finalizar() {
        var validator = $("#formulario").validate();
        if (validator.form()) {

            FinalizarDatos();
        }
    }
    function FinalizarDatos() {
        var Lista = JSON.parse('@Html.Raw(Json.Encode(ViewBag.cargue_base))');
        var SelectedList = new Array();
        var SelectedList = Lista;

        var formData = new FormData($("form")[0]);

        formData.append("id_auditor", $("#id_analista_asig").val());
        for (var i = 0; i < SelectedList.length; i++) {
            formData.append('SelectedList', SelectedList[i]);
        }

        LoadingShow();
        $.ajax({
           url: "@Url.Action("SaveAsignacionMasivoAuditor", "RadicacionElectonica")",
            type: "post",
            data: formData,
            method: 'POST',
            contentType: false,
            processData: false,

            success: function (response) {

              if (response.success)
              {
                  alert(response.message);
                  LoadingHide();
                  location.reload();
              }
              else
              {
                     alert(response.message);
                     LoadingHide();
              }

            }
        })
    }

</script>

