                    $("#myModal9").modal('show');
                }
            });
        } else {
            alert("Debe seleccionar mínimo un ítem");
        }
    }

    function reasignarAuditor() {
        validacionCheckeoId();

        if (seleccionadosIds.length > 0) {
            var laURLDeLaVista = '@Url.Action("GestionarAuditorReasigGlobal")?items=' + seleccionadosIds;
