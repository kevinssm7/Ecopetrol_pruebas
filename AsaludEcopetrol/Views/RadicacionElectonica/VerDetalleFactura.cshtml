    function CalcularTotalGlosas() {

        var total = 0;
        var cont = $("#conteoGlosa").val();

        var conteo = parseInt(cont, 10);

        if (!isNaN(conteo) && conteo > 0) {

            for (var j = 1; j <= conteo; j++) {
                var valor = $("#valorGlosa_" + j).val();
                var cantidad = parseFloat($("#cantidadGlosa_" + j).val());
                var numero = parseFloat(valor);

                if (!isNaN(numero) && numero !== 0) {

                    total += (numero * cantidad);
                }
            }
        }

        var valorTotal = formatearaPesos(total);
        $("#valorTotalGlosas").text(valorTotal);
    }

