                        <th>Id factura</th>
                        <th>Días Trascurridos</th>
                        <th>No. factura</th>
                        <th>Fecha recepción factura</th>
                        <th>Valor neto a pagar</th>
                        <th>Nombre prestador</th>
                        <th>Regional</th>
                        <th>Factura digital</th>
                        <th>Soportes clínicos</th>
                        <th>Archivos comprimidos</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
