
@model ECOPETROL_COMMON.ENTIDADES.managemenet_prestadores_traerDatosFacturasAuditor_idDetalleResult

@{
    ViewBag.Title = "GESTIÓN FACTURA AUDITOR";
    Layout = "~/Views/Shared/_LayoutECOPETROL.cshtml";

    int i = 0;
}

<div class="container">
    <form id="formTotalidadFacturas">

        <div class="panel panel-default">
            <div class="panel-heading">
                <strong class="text-primary_asalud">DATOS BÁSICOS</strong>
            </div>
            <div class="panel-body">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-3">
                            <label class="text-secondary_asalud">Código prestador</label>
                            <input type="hidden" id="idCargue" name="idCargue" value="@ViewBag.idCargue" />
                            <input type="hidden" id="idDetalle" name="idDetalle" value="@ViewBag.idDetalle" />
                            <input type="hidden" id="regional" name="regional" value="@ViewBag.regional" />
                            <input type="hidden" id="cuv" name="cuv" value="@Model.cuv" />
                            <input type="text" id="codigoPrestador" name="codigoPrestador" value="@Model.codigo_prestador" class="form-control" maxlength="50" />
                            <input type="hidden" id="calcularTodo" name="calcularTodo" />
                        </div>
                        <div class="col-md-3">
                            <label class="text-secondary_asalud">Nit del prestador</label>
                            <input type="text" id="nit" name="nit" value="@Model.nit_prestador" class="form-control" readonly />
                        </div>
                        <div class="col-md-3">
                            <label class="text-secondary_asalud">Prestador</label>
                            <input type="text" id="prestador" name="prestador" value="@Model.prestador" class="form-control" readonly />
                        </div>
                        <div class="col-md-3">
                            <label class="text-secondary_asalud">Número factura</label>
                            <input type="text" id="factura" name="factura" value="@Model.numero_factura" class="form-control" readonly />
                        </div>
                    </div>
                    <br />

                    <div class="row">
                        <div class="col-md-3">
                            <label class="text-secondary_asalud">Fecha factura</label>
                            <input type="text" id="fechafactura" name="fechafactura" style="width:100%;" value="@Model.fecha_factura" class="form-control datepickerr" required />
                        </div>
                        <div class="col-md-3">
                            <label class="text-secondary_asalud">Fecha inicio atención</label>
                            <input type="text" id="fechainicio" name="fechainicio" style="width:100%;" value="@Model.fecha_inicio_atencion" class="form-control datepickerr" />
                        </div>
                        <div class="col-md-3">
                            <label class="text-secondary_asalud">Fecha final atención</label>
                            <input type="text" id="fechafin" name="fechafin" style="width:100%;" value="@Model.fecha_fin_atencion" class="form-control datepickerr" />
                        </div>
                        <div class="col-sm-3">
                            <label class="text-secondary_asalud">Número contrato</label>
                            <input type="text" id="textoContrato" name="textoContrato" value="@Model.numero_contrato" class="form-control" readonly />
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-sm-3">
                            <label class="text-secondary_asalud">Centro logístico</label>
                            <input type="text" id="textoCenLog" name="textoCenLog" value="@Model.centro_logistico" class="form-control" readonly />
                        </div>
                        <div class="col-sm-3">
                            <label class="text-secondary_asalud">Grupo de compras</label>
                            <input type="text" id="textoGruCom" name="textoGruCom" value="@Model.grupo_compras" class="form-control" readonly />
                        </div>
                        <div class="col-sm-3">
                            <label class="text-secondary_asalud">Posición contrato</label>
                            <input type="text" id="textoPosCon" name="textoPosCon" value="@Model.posicion_contrato" class="form-control" readonly />
                        </div>
                        <div class="col-sm-3">
                            <label class="text-secondary_asalud">Contrato operativo</label>
                            <input type="text" id="texoConOpe" name="texoConOpe" value="@Model.numero_contrato_operativo" class="form-control" readonly />
                        </div>
                    </div>
                    <br />

                    <div class="row">
                        <div class="col-md-3">
                            <label class="text-secondary_asalud">¿Gasto integral?</label>
                            <select id="gasto_integral" name="gasto_integral" class="form-control" onchange="mostrarIntegral(this.value)" required>
                                <option value="">-Seleccione-</option>
                                <option value="1">SI</option>
                                <option value="2">NO</option>
                            </select>
                        </div>
                        <div class="col-md-9" id="divModalIntegral" style="display:none;">
                            <div class="col-md-5">
                                <label class="text-secondary_asalud">Tiga</label>
                                <input type="text" name="tiga_integral" id="tiga_integral" maxlength="100" class="form-control solo-numero" />
                            </div>
                            <div class="col-md-7">
                                <label class="text-secondary_asalud">Descripción Tiga</label>
                                <input type="text" name="descripcion_tiga_integral" id="descripcion_tiga_integral" maxlength="200" class="form-control" readonly />
                            </div>
                        </div>
                    </div>
                    <br />

                    <div class="row">
                        <div class="col-sm-3">
                            <label class="text-secondary_asalud">Departamento</label>
                            <input type="text" id="textoDepartamento" name="textoDepartamento" value="@Model.nombre_departamento" class="form-control" readonly />
                        </div>
                        <div class="col-sm-3">
                            <label class="text-secondary_asalud">Municipio</label>
                            <input type="text" id="textoMunicipio" name="textoMunicipio" value="@Model.nombre_municipio" class="form-control" readonly />
                        </div>


                        <div class="col-md-3">
                            <label class="text-secondary_asalud">¿Revisión con pertinencia?</label>
                            <select id="pertinencia" name="pertinencia" class="form-control" required>
                                <option value="">-Seleccione-</option>
                                <option value="1">SI</option>
                                <option value="0">NO</option>
                            </select>
                        </div>

                        <div class="col-md-2">
                            <label class="text-secondary_asalud">¿Glosa completa?</label>
                            <select id="glosaCompleta" name="glosaCompleta" class="form-control" onchange="MostrarGlosaCompleta(this.value);" required>
                                <option value="">-Seleccione-</option>
                                <option value="1">SI</option>
                                <option value="0">NO</option>
                            </select>
                        </div>

                        <br />
                        <div class="col-md-1">
                            <a class="btn btn-sm button_Asalud_Aceptar botonDocumentacion" onclick="verArchivos()">
                                Documentos <i class="glyphicon glyphicon-file" style="align-content:center;"></i>
                            </a>
                        </div>
                    </div>
                    <br />

                    <div class="row" id="divGlosaCompleta" style="display:none">
                        <div class="col-md-3">
                            <label class="text-secondary_asalud">Concepto general</label>
                            <select id="concepto_general" name="concepto_general" class="form-control select2" required onchange="TraerEspecificosMasivo(this.value)">
                                <option value="">-Seleccione-</option>
                                @foreach (ECOPETROL_COMMON.ENTIDADES.ref_fisFacturas_conceptoGeneral item in ViewBag.conceptoGeneral)
                                {
                                    <option value="@item.id_tipo">@item.descripcion</option>
                                }
                            </select>
                        </div>

                        <div class="col-md-3">
                            <label class="text-secondary_asalud">Concepto específico</label>
                            <select id="concepto_especifico" name="concepto_especifico" class="form-control select2" required onchange="TraerAplicacionMasivo(this.value)">
                                <option value="">-Seleccione-</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="text-secondary_asalud">Concepto aplicación</label>
                            <select id="concepto_aplicacion" name="concepto_aplicacion" class="form-control select2" required>
                                <option value="">-Seleccione-</option>
                            </select>
                        </div>

                        <div class="col-md-12">
                            <label class="text-secondary_asalud">Observación</label>
                            <textarea id="observacionGlosaCompleta" name="observacionGlosaCompleta" class="form-control" cols="3" rows="3" required maxlength="4999"></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />

        <div class="panel-body">

            <div class="col-md-2">
                <a class="btn btn-sm button_Asalud_Aceptar botonEDitarIvaMasivo" onclick="EditarIvaMasivo();">Editar IVA</a>
            </div>

            <div class="col-md-2">
                <a class="btn btn-sm button_Asalud_Guardar botonEditarTigaMasivo" onclick="EditarTigasMasivo();">Editar TIGAS</a>
            </div>

            <div class="col-md-2">
                <a class="btn btn-sm button_Asalud_Aceptar botonGlosasMasivas" onclick="AgregarGlosaMasivo();">Agregar glosas</a>
            </div>

            <div class="col-md-12 text-right">
                <a onclick="ExportarRips();" class="btn-sm button_Asalud_descargas"><i class="glyphicon glyphicon-download"></i>&nbsp; Descargar detalles</a>
            </div>
        </div>

        <br />
        <div class="col-md-12 text-center">
            <label class="text-secondary_asalud">Valor factura: <span id="valortotalFactura">0</span> </label>
            <input type="hidden" class="form-control solo-numero" id="totalfactura" name="totalfactura" maxlength="12" />
        </div>
        <br />

        <div class="panel-body divBusquedaCups">
            <div class="col-md-5">
                <input type="text" id="cupsBusqueda" name="cupsBusqueda" maxlength="300" placeholder="CUPS" class="form-control" />
            </div>
            <div class="col-md-4">
                <a class="btn btn-sm button_Asalud_Aceptar" onclick="SeleccionarAllCups();">MARCAR TODOS</a>
                <a class="btn btn-sm button_Asalud_Rechazar" onclick="DesmarcarAllCups();">DESMARCAR TODOS</a>
            </div>
        </div>

        <br />

        <div class="panel-body">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <strong class="text-primary_asalud">DETALLES</strong>
                </div>
                <div class="panel-body">

                    <table id="tablaDetalle" class="table table-striped table-bordered table-condensed datatable table-responsive" style="width:98%;">
                        <thead>
                            <tr>
                                <th>Ítem</th>
                                <th title="Solo se seleccionen los que se muestran por pantalla">Sel todos<input type="checkbox" id="chkTodos" onchange="MarcarTodos()" title="Solo se seleccionen los que se muestran por pantalla" /></th>
                                <th>Documento usuario</th>
                                <th>Usuario</th>
                                <th>Código CUPS-CUMS</th>
                                <th>Descripción CUPS-CUMS</th>
                                <th>Fecha prestación</th>
                                <th>CIE10</th>
                                <th>CIE10 relacionado</th>
                                <th>Cantidad</th>
                                <th>Valor unitario</th>
                                <th>valor total detalle</th>
                                <th>Tipo IVA</th>
                                <th>Valor con IVA</th>
                                <th>TIGA</th>
                                <th>Descripción TIGA</th>
                                <th>Glosa automática tarifas</th>
                                <th>Glosa</th>
                                <th>Opciones</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (ECOPETROL_COMMON.ENTIDADES.management_fis_facturasCuv_conBeneficiariosResult item in ViewBag.listadoCups)
                            {
                                var existeBen = item.existeBeneficiario == 1 ? item.nombreUsuario : "NO EXISTE BENEFICIARIO";
                                var colorExisteBB = item.existeBeneficiario == 0 ? "noExBb" : "";

                                i++;

                                var codGlosa = "";

                                if (item.codConGlosa != null && item.cod_cups == item.codConGlosa)
                                {
                                    codGlosa = "class='Sombreado'";
                                }

                                <tr id="tr_@item.id_registro" style="@colorExisteBB">
                                    <td @codGlosa id="td_@item.id_registro">@item.id_registro</td>
                                    <td>
                                        <input type="checkbox" id="chekregistro_@item.id_usuario-@item.id_registro-@item.id_factura-@item.id_recep_facturas_cargue_base-@item.tipo"
                                               name="chekregistro_@item.cod_cups-@item.id_usuario-@item.id_registro-@item.id_factura-@item.id_recep_facturas_cargue_base-@item.tipo" />

                                        <input type="hidden" id="codCups_@item.id_registro-@item.id_usuario" value="@item.cod_cups" />
                                        <input type="hidden" id="codigo_cuv_@item.id_registro-@item.id_usuario" value="@item.cod_cuv" />
                                        <input type="hidden" id="tipo_@item.id_registro-@item.id_usuario" value="@item.tipo" />
                                        <input type="hidden" id="valorCups_@item.id_registro-@item.id_usuario" value="@item.valor_cups" />
                                        <input type="hidden" id="valorindividualCups_@item.id_registro-@item.id_usuario" value="@item.valor_individual" />
                                        <input type="hidden" id="codPrestador_@i" value="@item.codigo_prestador-@item.id_usuario" />
                                        <input type="hidden" id="idRips_@item.id_registro-@item.id_usuario" value="@item.id_registro" />
                                        <input type="hidden" id="cantidad_@item.id_registro-@item.id_usuario" value="@item.conteo_cups" />
                                        <input type="hidden" id="fechaPrestacion_@item.id_registro-@item.id_usuario" value="@item.fecha_prestacion" />

                                        <input type="hidden" id="cie10_@item.id_registro" name="cie10_@item.id_registro" value="@item.cie10" />
                                        <input type="hidden" id="descripcioncie10_@item.id_registro" name="descripcioncie10_@item.id_registro" value="@item.descripcion_cie10" />
                                        <input type="hidden" id="cie10relacionado_@item.id_registro" name="cie10relacionado_@item.id_registro" value="@item.cie10_relacionado" />
                                        <input type="hidden" id="descripcioncie10relacionado_@item.id_registro" name="descripcioncie10relacionado_@item.id_registro" value="@item.descripcion_cie10_relacionado" />
                                    </td>

                                    <td @codGlosa>@item.documentoUsuario</td>
                                    <td @codGlosa>@item.nombreUsuario</td>
                                    <td @codGlosa>@item.cod_cups</td>
                                    <td @codGlosa>@item.descripcion_cuvs</td>
                                    <td @codGlosa>@item.fecha_prestacion</td>
                                    <td @codGlosa>
                                        <label onclick="EditarCIE10(@item.id_registro, @item.id_factura)">@item.cie10 - @item.descripcion_cie10</label>
                                    </td>
                                    <td @codGlosa>
                                        <label onclick="EditarCIE10(@item.id_registro, @item.id_factura)">@item.cie10_relacionado - @item.descripcion_cie10_relacionado</label>
                                    </td>

                                    <td @codGlosa>@item.conteo_cups</td>
                                    <td @codGlosa>
                                        @String.Format(new System.Globalization.CultureInfo("es-CO"), "{0:C}", item.valor_individual)
                                    </td>
                                    <td @codGlosa>@String.Format(new System.Globalization.CultureInfo("es-CO"), "{0:C}", item.valor_cups)</td>

                                    <td @codGlosa>@item.tipo_iva</td>
                                    <td @codGlosa>@String.Format(new System.Globalization.CultureInfo("es-CO"), "{0:C}", item.ValorNetoConIVA)</td>

                                    <td @codGlosa>@item.codigo_tiga</td>
                                    <td @codGlosa>@item.descripcion_tiga</td>
                                    <td style="background-color:@(item.existeGlosaLevantada == 1 ? "#DBC5C5" : "transparent")">
                                        @String.Format(new System.Globalization.CultureInfo("es-CO"), "{0:C}", item.glosa_automatica)
                                    </td>

                                    <td @codGlosa>
                                        <a class="btn btn-xs button_Asalud_Aceptar" onclick="AgregarGlosa('@item.id_registro', '@item.id_usuario')">Agregar</a>
                                    </td>
                                    <td @codGlosa>
                                        <a class="btn btn-xs button_Asalud_Guardar" onclick="EditarRips('@item.id_registro', '@item.id_usuario', '@item.id_transaccion', 2)">Editar</a>
                                        @*<a class="btn btn-xs button_Asalud_Rechazar" onclick="EliminarRips('@item.id_registro', '@item.id_usuario', '@item.id_factura')">Eliminar</a>*@
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <div class="col-md-12 text-center">
                        <label class="text-secondary_asalud">Total RIPS: <span id="valorTotalCups">0</span> </label>
                    </div>
                    <br />

                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <strong class="text-primary_asalud">GLOSAS</strong>
                        </div>
                        <div class="panel-body">
                            <input type="hidden" id="conteoGlosa_" name="conteoGlosa_" />
                            @*<div class="col-md-12 text-left">
                                    <div class="col-md-2">
                                        <a class="btn btn-sm button_Asalud_Aceptar" id="btnMasivoLevantar_" style="display:none;" onclick="LevantarGlosaMasivo();"><i class="glyphicon glyphicon-edit"></i>Levantar masivo</a>
                                    </div>
                                </div>*@

                            <table id="tablaGlosas" class="table table-striped table-bordered table-condensed datatable table-responsive" style="width:98%;">
                                <thead>
                                    <tr>
                                        <th>ítem</th>
                                        <th>Id</th>
                                        <th>Documento usuario</th>
                                        <th>Usuario</th>
                                        <th>Descripción CUPS-CUMS</th>
                                        <th>Tipo glosa</th>
                                        <th>Concepto general</th>
                                        <th>Concepto específico</th>
                                        <th>Concepto aplicación</th>
                                        <th>Valor glosa</th>
                                        <th>Cantidad</th>
                                        <th>Valor total</th>
                                        <th>Observaciones</th>
                                        <th>Levantar</th>
                                        @*<th>Opciones</th>*@
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (ECOPETROL_COMMON.ENTIDADES.management_fisFacturas_glosaResult item in ViewBag.listadoGlosas)
                                    {
                                        <tr id="tr_@item.id_glosa">
                                            <td>
                                                <input type="checkbox" id="ch_@item.id_usuarios-@item.id_glosa-@item.id_factura-@item.id_cargue"
                                                       name="ch_@item.id_usuarios-@item.id_glosa-@item.id_factura-@item.id_cargue" />
                                            </td>
                                            <td>
                                                @item.id_glosa
                                                <input type="hidden" id="cantidadGlosa_@i" value="@item.cantidad" />
                                                <input type="hidden" id="valorGlosa_@i" value="@item.valor_glosado" />
                                            </td>
                                            <td>@item.documentoUsuario</td>
                                            <td>@item.nombreUsuario</td>

                                            <td>
                                                @item.codCups
                                            </td>

                                            <td>@item.tipo</td>
                                            <td>@item.descripcionGeneral</td>
                                            <td>@item.descripcionEspecifico</td>
                                            <td>@item.descripcionAplicacion</td>
                                            <td>@String.Format(new System.Globalization.CultureInfo("es-CO"), "{0:C}", item.valor_glosado)</td>
                                            <td>@item.cantidad</td>
                                            <td>@String.Format(new System.Globalization.CultureInfo("es-CO"), "{0:C}", item.valorTotal)</td>
                                            <td>
                                                <span class="observaciones_@i">@((item.observacion.Length > 100 ? item.observacion.Substring(0, 100) : item.observacion))</span>
                                                <span class="observaciones_completas_@item.id_glosa" style="display: none;">@item.observacion</span>
                                                @if (item.observacion.Length > 100)
                                                {
                                                    <label class="text-secondary_asalud botonMostrar_@item.id_glosa" onclick="MostrarTextoCompleto(@item.id_glosa)">Mostrar</label>
                                                    <label class="text-secondary_asalud botonOcultar_@item.id_glosa" style="display: none;" onclick="OcultarTextoCompleto(@item.id_glosa)">Ocultar</label>
                                                }
                                            </td>
                                            <td>
                                                <a class="btn btn-xs button_Asalud_Aceptar" onclick="LevantarGlosa(@item.id_glosa, @item.id_factura, @item.id_registroRips)">
                                                    <i class="glyphicon glyphicon-edit"></i>&nbsp; Levantar
                                                </a>
                                            </td>
                                            @*<td>
                                                    <a class="btn btn-xs button_Asalud_Rechazar" onclick="DeleteGlosa(@item.id_glosa, @item.id_usuarios)">
                                                        <i class="glyphicon glyphicon-trash"></i>&nbsp; Eliminar
                                                    </a>
                                                    &nbsp;
                                                    <a class="btn btn-xs button_Asalud_Guardar" onclick="EditarGlosa(@i, @item.id_glosa, @item.id_usuarios)" data-toggle="modal" data-target="#modalGlosa">
                                                        <i class="glyphicon glyphicon-edit"></i>&nbsp; Editar
                                                    </a>
                                                </td>*@
                                        </tr>

                                    }

                                </tbody>
                            </table>

                            <div class="col-md-12 text-center">
                                <label class="text-secondary_asalud">Total glosas: <span id="valorTotalGlosas">0</span> </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <br />

        <div class="panel panel-default">
            <div class="panel-heading">
                <strong class="text-primary_asalud">DETALLES</strong>
            </div>
            <div class="panel-body">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12 text-center">
                            <a class="button_Asalud_Guardar" onclick="ValidarIngresoFacturaTotal();">GUARDAR</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<div id="ModalArchivos" class="modal fade" role="dialog">
    <div class="modal-dialog" style="width:60%">
        <div class="modal-content">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <strong class="text-primary_asalud">DOCUMENTOS CARGADOS</strong>
                </div>
                <div class="panel-body">
                    <table id="tableArchivos" style="width:98%;" class="table table-bordered table-condensed table-striped">
                        <thead>
                            <tr>
                                <th>item</th>
                                <th>Tipo</th>
                                <th>Nombre documento</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" data-keyboard="false" id="modalGlosa">
    <div class="modal-dialog modal-lg" style="width:70%">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="titlemodal"></h4>
            </div>
            <div class="modal-body">
                <div id="resultado"></div>
