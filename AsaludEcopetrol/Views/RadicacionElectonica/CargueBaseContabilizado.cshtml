<script src="~/Scripts/validate.js"></script>
<script>

    if (window.history.replaceState) {
        window.history.replaceState(null, null, window.location.href);
    }

    $(document).ready(function () {
        $('.select2').select2({
            width: '100%'
        });

        $(".datepickerr").kendoDatePicker({
            format: "MM/dd/yyyy",
        });
        $(".k-input").attr('readonly', true);

    })

    function ValidarFormulario() {
        var validator = $("#formulario").validate();
        if (validator.form()) {

            GuardarDatos();
        }
    }

    debugger
    function GuardarDatos() {

         var formData = new FormData($("form")[0]);

         formData.append("file", $("input[type=file]")[0].files[0]);

        LoadingShow();
        $.ajax({
            url: "@Url.Action("SaveBaseContabilizada", "RadicacionElectonica")",
            type: "post",
            data: formData,
            method: 'POST',
            contentType: false,
            processData: false,

            success: function (response) {

                if (response.success)
                {
                    LoadingHide();
                    alert(response.message);
                     var URL2 = "@Url.Action("CrearPdfCartaContabilizada", "RadicacionElectonica")?ID=" + response.lote;
                     window.open(URL2, '', 'width =700,height =700,left =50,top =50,toolbar =yes');
                     location.reload();
                }
                else
                {
                     LoadingHide();
                     alert(response.message);
                }

            }
        })
    }

     $("#file").change(function () {

            var data = document.getElementById('file');
            var nameext = data.files[0].name;
            var extension = getFileExtension3(nameext);

            var listaextensiones = ["xlsx", "xlsm", "xlsb", "xltx", "xltm", "xls", "csv"];
            var valida = false;

            jQuery.each(listaextensiones, function (i, val) {
                if (extension == val) {
                    valida = true;
                }
            });

            if (valida == false) {
                alert("La extension no es valida");
                $("#file").val("");
            }

     });
     function getFileExtension3(filename) {
        return filename.slice((filename.lastIndexOf(".") - 1 >>> 0) + 2);
    }
</script>

