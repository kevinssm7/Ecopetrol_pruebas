@using Kendo.Mvc.UI;
@{
    ViewBag.Title = "PROCESOS INTERNOS";
    Layout = "~/Views/Shared/_LayoutECOPETROL.cshtml";
}

<br />

<div class="container">
    <div class="col-sm-12 row">
        <div class="alert alert-info">
            <strong>Nota:</strong> Seleccione el proceso que deseea realizar, y luego de ello oprima el boton buscar.
        </div>
        <form method="post">
            <div class="col-sm-12 form-group row">
                <div class="col-sm-6 row">
                    <h4><span class="text-secondary_asalud">Proceso</span> </h4>
                    <select class="form-control" id="cbxproceso" name="proceso">
                        <option value="">Seleccione</option>
                        <option value="1">Administrador de indicadores Visitas de Calidad</option>
                        <option value="2">Evaluación de calidad</option>
                        <option value="3">Resultados Ranking</option>
                        <option value="4">Agregar Visita</option>
                        <option value="5">Administrador de Visitas</option>
                    </select>
                </div>
                <div class="col-sm-4">
                    <h4 style="visibility:hidden"><span class="text-secondary_asalud">btn buscar</span> </h4>
                    <button class="btn btn-primary">Buscar</button>
                </div>
            </div>
        </form>
    </div>
</div>



