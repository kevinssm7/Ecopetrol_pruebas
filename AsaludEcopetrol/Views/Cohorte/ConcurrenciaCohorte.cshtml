@using Kendo.Mvc.UI;
@model AsaludEcopetrol.Models.Evolucion.Cohorte
@{
    ViewBag.Title = "INGRESO COHORTE";
    Layout = "~/Views/Shared/_LayoutECOPETROL.cshtml";
}

<br />


@using (Html.BeginForm())
{
    <div class="container">
        <div id="pnlPrincipal" class="General">

            <table>
                <tr>
                    <td>&nbsp;</td>
                </tr>
            </table>
            <br />
            <table border="1" align="center" width="600">


                @if (Model != null && Model.LstCohorte != null && Model.LstCohorte.Count > 0)
                {
                    <tr>

                        <th class="text-center">ID</th>
                        <th class="text-center">ID CONCURRENCIA</th>
                        <th class="text-center">NOMBRE COHORTE</th>
                        <th class="text-center">OBSERVACIONES</th>
                        <th class="text-center">FECHA DIGITA</th>

                    </tr>


                    foreach (var item in Model.LstCohorte)
                    {



                        <tr>

                            <td class="text-center">@item.id_cohorte</td>
                            <td class="text-center">@item.id_concurrencia</td>
                            <td class="text-center">@item.nombre_ingreso_cohorte</td>
                            <td class="text-center">@item.observacion</td>
                            <td class="text-center">@item.fecha_digita</td>


                        </tr>
                    }

                }


            </table>


        </div>
        <br /><br />
        <div class="row">
            <div class="col-sm-12">
                <table align="center" width="700" style="color:#ffffff; background: #2E64FE;">
                    <tr>
                        <td class="text-center">
                            <Label>COHORTE</Label>
                        </td>
                    </tr>
                </table>
                <br />
                <br />
            </div>
        </div>

        <div class="row">
            <div class="col-lg-6 col-centrada">
                <h4><span class="text-secondary_asalud">@Html.LabelFor(p => p.id_ref_ingreso_cohorte)</span></h4>
                @Html.DropDownListFor(model => model.id_ref_ingreso_cohorte, new SelectList(Model.LstRefTipoCohorte, "id_ref_ingreso_cohorte", "descripcion_ingreso"), "Seleccione...", new { @class = "form-control", @onchange = "mostrar()" })
                @Html.ValidationMessageFor(u => u.id_ref_ingreso_cohorte, null, new { @class = "label label-danger" })
            </div>


        </div>

        <div class="row">

            <div class="col-lg-6 col-centrada">
                <h4><span class="text-secondary_asalud">@Html.LabelFor(p => p.Observacion)</span></h4>
                @Html.TextAreaFor(u => u.Observacion, new { @class = "form-control" })
                @Html.ValidationMessageFor(u => u.Observacion, null, new { @class = "label label-danger" })
            </div>

        </div>

        <br />

        <div id="pnlGuardar" class="General">
            <div align="center">
                <div>
                    @if (ViewBag.usuario == "14")
                    {

                    }
                    else
                    {
                        <input id="BtnAgregar" type="submit" value="AGREGAR" class="btn btn-success" />
                    }

                </div>
            </div>
            <div class="Error">
                @Html.ValidationSummary(true, "")
            </div>
            <div style="display:none">
                @Html.TextBoxFor(u => u.id_concurrencia, new { @id = "idconcu" })
            </div>




        </div>
        <br />
    </div>







}


