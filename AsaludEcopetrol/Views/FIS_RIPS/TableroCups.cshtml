<script>

    $(document).ready(function () {
        $('.select2').select2({
            width: '100%'
        });

        $(".datepickerr").kendoDatePicker({
            format: "MM/dd/yyyy",
        });

        $(".k-input").attr('readonly', true);

    });

    $('.table').DataTable({
        "sSearch": "Buscar:",
        "searching": true,
        "iDisplayLength": 15,
        "lengthChange": false,
        "info": false,
        responsive: true,
        language: {
            "decimal": "",
            "emptyTable": "No hay información",
            "info": "Mostrando _START_ a _END_ de _TOTAL_ Entradas",
            "infoEmpty": "Mostrando 0 to 0 of 0 Entradas",
            "infoFiltered": "(Filtrado de _MAX_ total entradas)",
            "infoPostFix": "",
            "thousands": ",",
            "lengthMenu": "Mostrar _MENU_ Entradas",
            "loadingRecords": "Cargando...",
            "processing": "Procesando...",
            "search": "Buscar:",
            "zeroRecords": "Sin resultados encontrados",
            "paginate": {
                "first": "Primero",
                "last": "Ultimo",
                "next": "Siguiente",
                "previous": "Anterior"
            }
        },
    });

    function EditarCups(idCups) {

        var confirmar = confirm("¿Seguro(a) de editar esta CUPS?");
        if (confirmar == true) {
            location.href = "@Url.Action("CreacionCUPS", "FIS_RIPS")?idCups=" + idCups;
        }
    }



    function EliminarCups(idCups) {

        var confirmar = confirm("¿Seguro(a) de editar esta CUPS?");
        if (confirmar == true) {
            LoadingShow();
            $.ajax({
                url: '@Url.Action("EliminarCups", "FIS_RIPS")',
                data: {
                    idCups: idCups
                },
                method: "POST",
                processData: false,
                contentType: false,

                success: function (response) {
                    LoadingHide();
                    alert(response.mensaje);
                    if (response.rta == 1) {
                        location.reload();
                    }
                },
                error: function (xhr, status, error) {
                    LoadingHide();
                }
            });
        }
    }

    function ExportarExcelCups() {
        var URL2 = "@Url.Action("ExcelTableroControlCUPS", "FIS_RIPS")";
        window.open(URL2, '', 'width=450,height =150,left =50,top =550,toolbar =yes');
    }

</script>

