
@{
    ViewBag.Title = "INGRESO DE RESULTADOS";
    Layout = "~/Views/Shared/_LayoutECOPETROL.cshtml";
    List<ECOPETROL_COMMON.ENTIDADES.ref_cohortes> cohortes = (List<ECOPETROL_COMMON.ENTIDADES.ref_cohortes>)ViewBag.reftipocohorte;
    cohortes = cohortes.Where(l => l.descripcion.Contains("2021")).ToList();
}

<br />

<div class="container row">
    <div id="pnlPrincipal" class="General">
        <table id="" class="table table-striped table-bordered table-funcion" cellspacing="0" style="width:100%">
            <thead>
                <tr>
                    <th>Tipo adherencia</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (ECOPETROL_COMMON.ENTIDADES.ref_cohortes item in cohortes)
                {
                    <tr>
                        <td>@item.descripcion</td>
                        <td class="text-right"><a class="btn button_Asalud_Aceptar btn-sm" href="@Url.Action("IngresarResultados","Adherencia", new {idtipocohorte = item.id_ref_cohortes })"><i class="glyphicon glyphicon-plus"></i> &nbsp; Ingresar Resultados</a></td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="form-group text-center">
            <a href="@Url.Action("TableroResultados", "Adherencia")" role="button" class="btn button_Asalud_Rechazar">Volver</a>
        </div>
    </div>
</div>

