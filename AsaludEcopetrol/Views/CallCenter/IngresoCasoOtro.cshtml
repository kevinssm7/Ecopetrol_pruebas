
@model ECOPETROL_COMMON.ENTIDADES.management_contact_centerResult
@{
    ViewBag.Title = "CONTACT CENTER - INGRESO DE CASO OTROS";
    Layout = "~/Views/Shared/_LayoutECOPETROL.cshtml";
    List<ECOPETROL_COMMON.ENUM.BitacoraSeguimientoOtro> listabitacora = (List<ECOPETROL_COMMON.ENUM.BitacoraSeguimientoOtro>)Session["bitacoraOtro"];
    int rta = (int)ViewData["rta"];
}

<script type="text/javascript" src="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.9.2/jquery-ui.min.js"></script>
<link rel="Stylesheet" type="text/css" href="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.9.2/themes/blitzer/jquery-ui.css" />

<br />

<div class="container">
    @if (rta != 0)
    {
        <div style="font-family:'Century Gothic'" class="alert alert-success" role="alert">
            @if (rta == 1)
            {
                <strong>Datos insertados correctamente!</strong>
            }
            else
            {
                <strong>Datos actualizados correctamente!</strong>
            }

        </div>
    }

    @if (Model.id_contact_center > 0)
    {
        <br />
        <div style="font-family:'Century Gothic'" class="alert alert-info" role="alert">
            <strong>Señor/a usuario/a </strong> Recuerde que esta ventana es de consulta, y solo podra agregar datos a la bitacora de seguimiento. los demas datos no seran modificados
        </div>
    }

    <form id="formulario" method="post" action="IngresoCasoOtro" enctype="multipart/form-data">
        <div class="panel panel-default">
            <div class="panel-heading">
                <strong class="text-primary_asalud">DATOS DEL SOLICITANTE</strong>
            </div>
            <div class="panel-body">
                <div class="row">

                    <div class="col-sm-4 form-group">
                        <label class="text-secondary_asalud">Tipo de solicitante:</label>

                        <input type="hidden" id="id_contactcenter" name="id_contactcenter" value="@Model.id_contact_center" />
                        <input type="hidden" id="id_Censo" name="id_Censo" value="@ViewBag.idCenso" />

                        <select class="form-control select2" id="clasificacioncontacto" name="clasificacioncontacto" onchange="ActivarControlDocumento($(this).val())" required>
                            <option value="">- Seleccionar -</option>
                            @foreach (ECOPETROL_COMMON.ENTIDADES.ref_contact_clasificacion_contacto item in ViewBag.clasificacion)
                            {
                                if (Model.clasificacion_contacto_solicitante != null)
                                {
                                    if (Model.clasificacion_contacto_solicitante == item.id_ref_contact_clasificacion_contacto)
                                    {
                                        <option selected value="@item.id_ref_contact_clasificacion_contacto">@item.descripcion</option>
                                    }
                                    else
                                    {
                                        <option value="@item.id_ref_contact_clasificacion_contacto">@item.descripcion</option>
                                    }
                                }
                                else
                                {
                                    <option value="@item.id_ref_contact_clasificacion_contacto">@item.descripcion</option>
                                }

                            }
                        </select>
                    </div>

                    <div class="col-sm-4 form-group" id="txtnumdocbeneficiario" style="display:none">
                        <label class="text-secondary_asalud">No documento</label>
                        <input type="text" class="form-control solo-numero" id="documentosolicitante" name="documentosolicitante" value="@Model.num_documento_solicitante" maxlength="20" />
                    </div>

                    <div class="col-sm-4 form-group">
                        <label class="text-secondary_asalud">Nombre y apellido:</label>
                        <input type="text" autocomplete="off" class="form-control" id="nombresolicitante" style="text-transform:uppercase;" name="nombresolicitante" value="@Model.nom_solicitante" maxlength="80" required />
                    </div>
                    <div class="col-sm-4 form-group">
                        <label class="text-secondary_asalud">Teléfono:</label>
                        <input type="text" autocomplete="off" class="form-control solo-numero" id="telefonosolicitante" name="telefonosolicitante" value="@Model.telefono_solicitante" maxlength="20" />
                    </div>
                    <div class="col-sm-4 form-group">
                        <label class="text-secondary_asalud">Otro teléfono:</label>
                        <input type="text" autocomplete="off" class="form-control solo-numero" id="otrotelefonosolicitante" name="otrotelefonosolicitante" value="@Model.otro_telefono_solicitante" maxlength="20" />
                    </div>
                    <div class="col-sm-4 form-group">
                        <label class="text-secondary_asalud">Correo electrónico</label>
                        <input autocomplete="off" type="email" class="form-control" id="correosolicitante" name="correosolicitante" value="@Model.correo_electronico_solicitante" maxlength="100" />
                    </div>

                </div>
            </div>
        </div>

        <div class="panel panel-default">
            <div class="panel-heading">
                <strong class="text-primary_asalud">DATOS DEL PACIENTE</strong>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-4 form-group">
                        <label class="text-secondary_asalud">No documento:</label>
                        <input type="text" autocomplete="off" class="form-control solo-numero" id="documentopaciente" name="documentopaciente" value="@Model.num_documento_paciente" required maxlength="30" />
                    </div>
                    <div class="col-sm-4 form-group">
                        <label class="text-secondary_asalud">Nombre y apellido:</label>
                        <input type="text" autocomplete="off" class="form-control" id="nombrepaciente" name="nombrepaciente" value="@Model.nom_paciente" required maxlength="80" />
                    </div>

                    <div class="col-sm-4 form-group">
                        <label class="text-secondary_asalud">EPS paciente:</label>
                        <input type="hidden" id="ips_pacienteValue" name="ips_pacienteValue" value="@Model.ips_paciente">
                        <select class="form-control select2" id="ips_paciente" name="ips_paciente">
                            <option value="">- Seleccionar -</option>

                            @foreach (ECOPETROL_COMMON.ENTIDADES.ref_eps item in ViewBag.eps)
                            {
                                <option value="@item.id_ref_eps">@item.des</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-4 form-group">
                        <label class="text-secondary_asalud">Teléfono:</label>
                        <input type="text" autocomplete="off" class="form-control solo-numero" id="telefonopaciente" name="telefonopaciente" value="@Model.telefono_paciente" maxlength="20" />
                    </div>
                    <div class="col-sm-4 form-group">
                        <label class="text-secondary_asalud">Otro teléfono:</label>
                        <input type="text" autocomplete="off" class="form-control solo-numero" id="otrotelefonopaciente" name="otrotelefonopaciente" value="@Model.otro_telefono_paciente" maxlength="20" />
                    </div>
                    <div class="col-sm-4 form-group">
                        <label class="text-secondary_asalud">Correo electrónico:</label>
                        <input autocomplete="off" type="email" class="form-control" id="correopaciente" name="correopaciente" value="@Model.correo_electronico_paciente" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4 form-group">
                        <label class="text-secondary_asalud">Otro correo electrónico:</label>
                        <input autocomplete="off" type="email" class="form-control" id="otrocorreopaciente" name="otrocorreopaciente" value="@Model.otro_correo_paciente" />
                    </div>
                    <div class="col-sm-4 form-group">
                        <label class="text-secondary_asalud">Diagnóstico principal:</label>
                        <input autocomplete="off" type="text" class="form-control autocomplete" id="diagnostico" name="diagnostico" value="@Model.diagnostico_txt" maxlength="200" />
                        <input type="hidden" class="form-control" id="coddiagnostico" name="coddiagnostico" value="@Model.diagnostico " />
                    </div>
                    <div class="col-sm-4 form-group">
                        <label class="text-secondary_asalud">Diagnóstico secundario:</label>
                        <input autocomplete="off" type="text" class="form-control" id="diagnostico2" name="diagnostico2" value="@Model.diagnostico2_txt" maxlength="200" />
                        <input type="hidden" class="form-control" id="coddiagnostico2" name="coddiagnostico2" value="@Model.diagnostico2 " />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <label class="text-secondary_asalud">Otro contacto</label>
                        <select id="otroContacto" name="otroContacto" class="form-control" onchange="ActivarotroContacto()">
                            <option value="">--Seleccionar--</option>
                            <option value="1">SI</option>
                            <option value="0">NO</option>
                        </select>
                    </div>

                    <div class="col-md-9" id="divOtroContacto" style="display:none">
                        <div class="col-md-4">
                            <label class="text-secondary_asalud">Otro nombre contacto</label>
                            <input type="text" id="otroContactoNombre" name="otroContactoNombre" maxlength="50" value="@Model.otroContacto_nombre_paciente" class="form-control" />
                        </div>
                        <div class="col-md-4">
                            <label class="text-secondary_asalud">Otro parentezco contacto</label>
                            <input type="text" id="otroContactoParentezco" name="otroContactoParentezco" maxlength="50" value="@Model.otroContacto_parentezco_paciente" class="form-control" />
                        </div>
                        <div class="col-md-4">
                            <label class="text-secondary_asalud">Otro teléfono contacto</label>
                            <input type="text" id="otroContactoTelefono" name="otroContactoTelefono" maxlength="20" value="@Model.otroContacto_telefono" class="form-control solo-numero" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="panel panel-default">
            <div class="panel-heading">
                <strong class="text-primary_asalud">DATOS DE REFERENCIACIÓN Y UBICACIÓN</strong>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-4 form-group">
                        <label class="text-secondary_asalud">Regional:</label>
                        <input type="hidden" id="idRegional" name="idRegional" />

                        <select class="form-control select2" id="regional" name="regional" required>
                            <option value="">- Seleccionar -</option>
                            @foreach (ECOPETROL_COMMON.ENTIDADES.Ref_regional item in ViewBag.regionales)
                            {
                                <option value="@item.id_ref_regional">@item.nombre_regional</option>
                            }
                        </select>
                    </div>
                    <div class="col-sm-4 form-group">
                        <label class="text-secondary_asalud">Ciudad:</label>
                        @*<select class="form-control select2" id="ciudad" name="ciudad" onchange="ObtenerRegionalInicial(this.value)" required>*@
                        <select class="form-control select2" id="ciudad" name="ciudad" required>
                            <option value="">- Seleccionar -</option>
                        </select>
                    </div>
                    <div class="col-sm-4 form-group">
                        <label class="text-secondary_asalud">Agente solucionador:</label>
                        <input type="text" autocomplete="off" class="form-control" id="agente" name="agente" readonly required value="@ViewBag.agente" />
                    </div>
                </div>
            </div>
        </div>

        <div class="panel panel-default">
            <div class="panel-heading">
                <strong class="text-primary_asalud">EVIDENCIA DEL CASO</strong>
            </div>
            <div class="panel-body">
                <div class="row">
                    @if (string.IsNullOrEmpty(Model.ruta_imagen))
                    {
                        <div class="col-sm-6 form-group">
                            <label class="text-secondary_asalud">Seleccionar archivo como prueba de la gestión:</label>
                            <input type="file" class="form-control" id="imagen" name="imagen" />
                        </div>
                    }
                    else
                    {
                        <div class="col-sm-4 form-group">
                            <a role="button" class="btn button_Asalud_descargas" href="javascript:abrirducumento(@Model.id_contact_center)"><i class="glyphicon glyphicon-eye-open"></i>&nbsp;  Ver archivo cargado</a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="panel panel-default">
            <div class="panel-heading">
                <strong class="text-primary_asalud">BITACORA DE SEGUIMIENTO</strong>
            </div>
            <div class="panel-body">

                @*@if (Model.estado_solicitud == null || Model.estado_solicitud == 0 || Model.estado_solicitud == 1 || Model.estado_solicitud == 3)
                    {
                        <div class="row form-group">
                            <div class="col-sm-12 text-right">
                                <button type="button" onclick="AñadirBitacora()" class="btn button_Asalud_Aceptar">Añadir seguimiento</button>
                            </div>
                        </div>
                    }*@

                <table id="tabla" class="table table-bordered" style="margin-left: 0px;">
                    <thead>
                        <tr>
                            <th>Item</th>
                            <th>Fecha</th>
                            <th>Observaciones</th>
                            <th>Estado</th>
                            <th>Tipo solicitud</th>
                            <th>Servicio</th>
                            <th>Caso efectivo</th>
                            <th>Medio notificación</th>
                            <th></th>


                        </tr>
                    </thead>
                    <tbody>
                        @if (listabitacora.Count > 0)
                        {
                            foreach (var item in listabitacora)
                            {
                                <tr>
                                    <td>@item.id</td>
                                    <td>@item.fecha.ToString("dd/MM/yyyy")</td>
                                    <td>@item.observaciones</td>
                                    <td>@item.nomestado</td>
                                    <td>@item.tipoSolicitudDescripcion</td>
                                    <td>@item.servicioDescripcion</td>
                                    <td>@item.casoEfectivo</td>
                                    @if (item.medionotificacion == 1)
                                    {
                                        <td>@item.mailnotificacion</td>
                                    }
                                    else if (item.medionotificacion == 2)
                                    {
                                        <td>@item.telefononotificacion</td>
                                    }
                                    else
                                    {
                                        <td>
                                            <ul>
                                                <li>@item.mailnotificacion</li>
                                                <li>@item.telefononotificacion</li>
                                            </ul>
                                        </td>
                                    }
                                    <td class="text-center">
                                        @if (Model.estado_solicitud != null && Model.estado_solicitud == 1)
                                        {
                                            <a class="btn btn-xs button_Asalud_Rechazar" href="javascript:EliminarBitacora(@item.id)"><i class="glyphicon glyphicon-trash"></i>&nbsp; Eliminar</a>
                                        }
                                        <a class="btn btn-xs button_Asalud_descargas" href="javascript:VisualizarImagenBitacora(@item.id)"><i class="glyphicon glyphicon-eye-open"></i>&nbsp; Ver archivo</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td colspan="12" class="text-center">No se han insertado datos</td></tr>
                        }

                    </tbody>
                </table>
                <br />
                <div class="row">
                    <div class="col-sm-12 text-center">
                        @if (Model.id_contact_center == 0)
                        {
                            <a role="button" class="btn button_Asalud_Rechazar" href="@Url.Action("TableroControlContactCenter","CallCenter")">Volver</a>
                            <button class="btn button_Asalud_Guardar" type="button" onclick="validarformulario()">Guardar cambios</button>
                        }
                        else
                        {
                            if (Model.estado_solicitud == 1)
                            {
                                <a role="button" class="btn button_Asalud_Rechazar" href="@Url.Action("TableroControlContactCenter","CallCenter")">Volver</a>
                                <button class="btn button_Asalud_Guardar" type="button" onclick="validarformulario()">Guardar cambios</button>
                            }
                            else
                            {
                                <a role="button" class="btn button_Asalud_Rechazar" href="@Url.Action("TableroControlContactCenter","CallCenter")">Volver</a>
                            }
                        }

                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

