
@{
    ViewBag.Title = "EXPORTAR ACTAS";
    Layout = "~/Views/Shared/_LayoutECOPETROL.cshtml";
}

<br />

<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading">
            <p class="text-primary_asalud">BUSCAR Y EXPORTAR ACTAS DE VISITAS TRAMITADAS</p>
        </div>
        <div class="panel-body">
            <form id="formulario" method="post" action="ExportarActasVisitas">
                <div class="row">
                    <div class="col-sm-4">
                        <label class="text-secondary_asalud">Regional</label>
                        <select class="form-control select2" id="regional" name="regional" required>
                            <option value="">- Seleccionar -</option>
                            @foreach (ECOPETROL_COMMON.ENTIDADES.Ref_regional item in ViewBag.regional)
                            {
                                <option value="@item.id_ref_regional">@item.nombre_regional</option>
                            }
                        </select>
                    </div>
                    <div class="col-sm-4">
                        <label class="text-secondary_asalud">Mes</label>
                        <select class="form-control select2" id="mes" name="mes" required>
                            <option value="">- Seleccionar -</option>
                            @foreach (ECOPETROL_COMMON.ENTIDADES.ref_meses_del_año item in ViewBag.meses)
                            {
                                <option value="@item.id_mes">@item.descripcion</option>
                            }
                        </select>
                    </div>
                    <div class="col-sm-4">
                        <label class="text-secondary_asalud">Año</label>
                        <input name="año" id="año" maxlength="4" placeholder="-AÑO-" required type="text" class="form-control solo-numero year" autocomplete="off" />
                    </div>
                    <div class="col-sm-4">
                        <label style="width:100%; visibility:hidden" class="text-secondary_asalud">boton</label>
                        <button type="button" class="btn button_Asalud_descargas" onclick="ValidarFormulario()"><i class="glyphicon glyphicon-download"></i>&nbsp;Descargar actas</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/Scripts/validate.js"></script>
<script>

    $(document).ready(function () {
        $('.select2').select2({
            width: '100%',
            height: '100%'
        });
    });

    function ValidarFormulario() {

        var validator = $("#formulario").validate();
        if (validator.form()) {
            $("#formulario").submit();
        }
    }
</script>


