
@{
    ViewBag.Title = "TABLERO PRESTADORES";
    Layout = "~/Views/Shared/_LayoutECOPETROL.cshtml";
}


<br />

<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading">
            <strong class="text-primary_asalud">TABLERO DE CONTROL DE CALIDAD PRESTADORES</strong>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-sm-12 text-right form-group">
                    <a href="@Url.Action("CrearPrestador","ProcesosInternos")" class="btn button_Asalud_Aceptar" role="button">Crear nuevo prestador</a>
                </div>

                <table class="table table-condensed table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Razon social</th>
                            <th>NIT</th>
                            <th>Codigo SAP</th>
                            <th>Telefono</th>
                            <th>Dirección</th>
                            <th>Correo Electronico</th>
                            <th>No Contrato </th>
                            <th>Periodo Contrato</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (ECOPETROL_COMMON.ENTIDADES.calidad_prestadores item in ViewBag.CalidadPrestadores)
            {
                            <tr>
                                <td>@item.razon_social</td>
                                <td>@item.no_id_prestador</td>
                                <td>@item.cod_sap</td>
                                <td>@item.telefono_1</td>
                                @if (item.direccion.Length > 50)
                {
                                    <td>@item.direccion.Substring(0, 50)...</td>
                                }
                                else
                                {
                                    <td>@item.direccion</td>
                                }
                                @if (item.correo_electronico != null)
                {
                    if (item.correo_electronico.Length > 50)
                    {
                                        <td>@item.correo_electronico.Substring(0, 50)...</td>
                                    }
                                    else
                                    {
                                        <td>@item.correo_electronico</td>
                                    }
                                }
                                else
                                {
                                    <td>&nbsp;</td>
                                }
                                <td>@item.num_contrato</td>
                                @if (item.fecha_inicio_contrato != null && item.fecha_fin_contrato != null)
                {
                                    <td>@item.fecha_inicio_contrato.Value.ToString("dd/MM/yyyy") A @item.fecha_fin_contrato.Value.ToString("dd/MM/yyyy")</td>
                                }
                                else
                                {
                                    <td>&nbsp;</td>
                                }

                                <td><a title="Editar Prestador" role="button" class="btn button_Asalud_Guardar btn-sm" href="@Url.Action("CrearPrestador","ProcesosInternos", new { id_prestador = item.id_prestador})"><i class="glyphicon glyphicon-pencil"></i>&nbsp;Editar</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        $('.table').DataTable({
            "searching": true,
            "iDisplayLength": 25,
            "lengthChange": false,
            "info": false,
            "order": [[3, "desc"]],
            responsive: true,
        });
    })
</script>

