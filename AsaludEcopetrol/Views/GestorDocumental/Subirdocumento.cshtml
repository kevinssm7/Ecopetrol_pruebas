@model  AsaludEcopetrol.Models.GestorDocumental.GestorDocumental
@using Kendo.Mvc.UI;
@{
    ViewBag.Title = "INGRESO DOCUMENTOS";
    Layout = "~/Views/Shared/_LayoutECOPETROL.cshtml";
}



<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-filestyle/2.1.0/bootstrap-filestyle.min.js"></script>

<div class="container-fluid bg-3 text-center">
    <h3>INGRESO DOCUMENTOS</h3><br>

</div>

@using (Html.BeginForm("Subirdocumento", "GestorDocumental", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <table align="center" width="900" style="color:#ffffff; background: #2E64FE;">
        <tr>
            <td class="text-center" style="font-size:small"> <Label>FACTURA GENERAL</Label> </td>
        </tr>

    </table>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th class="text-center th">NUMERO FACTURA</th>
                <th class="text-center th">NUMERO FORMULA</th>

            </tr>

            <tr>

                <td>  @Html.TextBoxFor(p => p.numero_factura, "{0:#.#}", new { @class = "form-control" })</td>
                <td>  @Html.TextBoxFor(p => p.numero_formula, new { @class = "form-control" })</td>


            </tr>

        </tbody>
    </table>

    <div class="container">
        <form id="frm-alumno">
            <div class="row">
                <div class="col-sm-2">
                </div>
                <div class="col-sm-8">
                    <h4><span class="text-secondary_asalud">@Html.LabelFor(p => p.tipo_documento)</span></h4>
                    @Html.DropDownListFor(model => model.tipo_documento, new SelectList(Model.LstDocumnetal, "id_tipo_documental", "nombre"), "Seleccione...", new { @class = "form-control" })
                    @Html.ValidationMessageFor(u => u.tipo_documento, null, new { @class = "label label-danger" })

                </div>

                <div class="col-sm-2">
                </div>

            </div>


            <div class="row">
                <div class="col-sm-2">
                </div>

                <div class="col-sm-8">
                    <div class="form-group">
                        <h4><span class="text-secondary_asalud">@Html.LabelFor(p => p.observacion)</span></h4>

                    </div>
                    <div>
                        @Html.TextAreaFor(p => p.observacion, new { @class = "form-control" })

                    </div>

                </div>
                <div class="col-sm-2">
                </div>
            </div>

            <div class="row">

                <div class="col-sm-2">
                </div>
                <div class="col-sm-8">
                    <h4><span class="text-secondary_asalud">Archivo Excel - PDF - JPG - PNG</span></h4>

                </div>


                <div class="col-sm-2">

                </div>
            </div>


            <div class="row">
                <div class="col-sm-2">
                </div>

                <div class="col-sm-8">
                    <div style="position:relative;">
                        <a class='btn btn-primary' href='javascript:;'>

                            Seleccione Archivo..
                            <input type="file" id="FileUpload1" name="FileUpload1" style='position:absolute;z-index:2;top:0;left:0;filter: alpha(opacity=0);opacity:0;background-color:transparent;color:transparent;' size="50" onchange='$("#upload-file-info").html($(this).val());'>
                        </a>
                        &nbsp;
                        <span class='label label-danger' id="upload-file-info"></span>
                    </div>
                </div>
                <div class="col-sm-2">
                </div>
            </div>

            <div class="row">
                <div class="col-sm-2">
                </div>

                <div class="col-sm-8">
                    <button class="k-button k-primary" id="get" style="margin-top: 2em; float: none;">Cargar</button>
                </div>
                <div class="col-sm-2">
                </div>

            </div>




            <table align="center" style='display:none;'>
                <tr>
                    <td>
                        &nbsp;
                    </td>
                </tr>
                <tr><td>Archivo Excel - PDF - JPG - PNG </td></tr>
                <tr>

                    @*<td><input type="file" id="FileUpload1" name="FileUpload1" /></td>*@

                </tr>
                <tr>
                    <td>
                        <button class="k-button k-primary" id="get" style="margin-top: 2em; float: right;">Cargar</button>

                    </td>

                </tr>
                <tr></tr>
                <tr>
                    <td class="Error">
                        @Html.ValidationSummary(true, "")
                    </td>
                </tr>
                <tr>
                    <td style='display:none;'>
                        @Html.HiddenFor(x => x.numero_documento)
                        @Html.HiddenFor(x => x.numero_factura)
                        @Html.HiddenFor(x => x.proceso)
                        @Html.HiddenFor(x => x.numero_formula)
                        @Html.HiddenFor(x => x.tipo)


                    </td>

                </tr>

            </table>
        </form>
    </div>


}

<script>

</script>
